    <item>
      <title></title>
      <link>http://localhost:1313/aura-o-mat/aura-characteristics/</link>
      <pubDate>Mon, 01 Jan 0001 00:00:00 +0000</pubDate>
      
      <guid>http://localhost:1313/aura-o-mat/aura-characteristics/</guid>
      <description>
        
        
        &lt;h3&gt;What were your aura symptoms like?&lt;span class=&#34;hx-absolute -hx-mt-20&#34; id=&#34;what-were-your-aura-symptoms-like&#34;&gt;&lt;/span&gt;
    &lt;a href=&#34;#what-were-your-aura-symptoms-like&#34; class=&#34;subheading-anchor&#34; aria-label=&#34;Permalink for this section&#34;&gt;&lt;/a&gt;&lt;/h3&gt;&lt;div id=&#34;quizContainer&#34;&gt;&lt;/div&gt;
&lt;p id=&#34;resultC&#34; style=&#34;font-weight: bold; margin-top: 1rem&#34;&gt;&lt;/p&gt;

&lt;style&gt;
    .btn {
        display: inline-block;
        margin: 0.1rem 0.5rem 0 0;
        padding: 0.2rem 1.2rem;
        font-size: 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        background-color: #007bff;
        color: white;
    }
    .btn:hover {
        background-color: #0056b3;
    }
    .btn-outline {
        background-color: transparent;
        border: 2px solid #007bff;
        color: #007bff;
    }
    .btn-outline:hover {
        background-color: #007bff;
        color: white;
    }
    .btn-secondary {
        background-color: #6c757d;
    }
    .btn-secondary:hover {
        background-color: #565e64;
    }
    .info-icon {
        border: none;
        background: none;
        font-size: 1.1rem;
        margin-left: 0.4rem;
        cursor: pointer;
    }
&lt;/style&gt;

&lt;script&gt;
    const questions = [
        {
            text: &#34;Did at least one aura symptom spread gradually over ‚â•5 minutes?&#34;,
            explanation:
                &#34;E.g., a flickering spot in your visual field that slowly expands.&#34;,
        },
        {
            text: &#34;Did two or more aura symptoms occur in succession?&#34;,
            explanation: &#34;E.g., visual aura followed by tingling.&#34;,
        },
        {
            text: &#34;Did each individual aura symptom last between 5‚Äì60 minutes?&#34;,
            explanation: &#34;Shorter or longer durations are less typical.&#34;,
        },
        {
            text: &#34;Was at least one aura symptom unilateral (on one side only)?&#34;,
            explanation:
                &#34;E.g., vision affected in only one eye, or tingling only on one side.&#34;,
        },
        {
            text: &#34;Was at least one aura symptom positive (e.g., flashing lights or pins and needles)?&#34;,
            explanation:
                &#34;Positive means an added sensation (not loss of function).&#34;,
        },
        {
            text: &#34;Was the aura accompanied or followed within 60 minutes by headache?&#34;,
            explanation:
                &#34;Timing matters ‚Äî headache should be within 1 hour of aura.&#34;,
        },
    ];

    let current = 0;
    let answers = [];

    const container = document.getElementById(&#34;quizContainer&#34;);
    const result = document.getElementById(&#34;resultC&#34;);

    function showQuestion() {
        result.textContent = &#34;&#34;; 

        if (current === questions.length) {
            let summaryHTML = &#34;&lt;ul&gt;&#34;;
            questions.forEach((q, index) =&gt; {
                const response = answers[index] === true ? &#34;‚úÖ Yes&#34; : &#34;‚ùå No&#34;;
                summaryHTML += `&lt;li&gt;${q.text} &lt;strong&gt;${response}&lt;/strong&gt;&lt;/li&gt;`;
            });
            summaryHTML += &#34;&lt;/ul&gt;&#34;;

            container.innerHTML = `
              &lt;p&gt;&lt;strong&gt;You‚Äôve completed the section on aura characteristics.&lt;/strong&gt;&lt;/p&gt;
              &lt;p&gt;Here‚Äôs a summary of your responses:&lt;/p&gt;
              ${summaryHTML}
              &lt;p&gt;Click below to see whether your responses meet the clinical threshold for this part.&lt;/p&gt;
              &lt;button class=&#34;btn&#34; onclick=&#34;showResult()&#34;&gt;‚úÖ Yes, show my result&lt;/button&gt;
              &lt;button class=&#34;btn btn-secondary&#34; onclick=&#34;goBack()&#34;&gt;‚Üê Go Back&lt;/button&gt;
            `;
            return;
        }

        const q = questions[current];
        container.innerHTML = `
    &lt;p&gt;&lt;strong&gt;Question ${current + 1} of ${questions.length}&lt;/strong&gt;&lt;/p&gt;
    &lt;p&gt;${q.text}
      &lt;button onclick=&#34;showExplanation()&#34; title=&#34;More info&#34; class=&#34;info-icon&#34;&gt;‚ìò&lt;/button&gt;
    &lt;/p&gt;
    &lt;button class=&#34;btn&#34; onclick=&#34;answer(true)&#34;&gt;Yes&lt;/button&gt;
    &lt;button class=&#34;btn btn-outline&#34; onclick=&#34;answer(false)&#34;&gt;No&lt;/button&gt;
    ${current &gt; 0 ? `&lt;br&gt;&lt;br&gt;&lt;button class=&#34;btn btn-secondary&#34; onclick=&#34;goBack()&#34;&gt;‚Üê Go Back&lt;/button&gt;` : &#34;&#34;}
    &lt;div id=&#34;explanation&#34; style=&#34;display:none; margin-top: 0.5rem; font-style: italic;&#34;&gt;&lt;/div&gt;
  `;
    }

    function answer(choice) {
        answers[current] = choice;
        current++;
        showQuestion();
    }

    function goBack() {
        if (current &gt; 0) current--;
        showQuestion();
    }

    function showExplanation() {
        const explanation = questions[current].explanation;
        const explEl = document.getElementById(&#34;explanation&#34;);
        explEl.textContent = explanation;
        explEl.style.display = &#34;block&#34;;
    }

    function showResult() {
        const score = answers.filter((a) =&gt; a === true).length;
        const passed = score &gt;= 3;

        container.innerHTML = &#34;&#34;;

        result.textContent = passed
            ? &#34;‚úÖ You meet Criterion C: at least three characteristics apply.&#34;
            : &#34;‚ö†Ô∏è You do not meet Criterion C.&#34;;
        result.style.color = passed ? &#34;green&#34; : &#34;darkorange&#34;;

        
        const button = document.createElement(&#34;a&#34;);
        button.href = passed
            ? &#34;/aura-o-mat/symptom-check-summary/&#34;
            : &#34;/aura-o-mat/symptom-check-summary-n/&#34;;
        button.textContent = passed ? &#34;View Results&#34; : &#34;View Explanation&#34;;
        button.className = &#34;btn&#34;; 
        button.style.display = &#34;inline-block&#34;;
        button.style.marginTop = &#34;1rem&#34;;

        result.appendChild(document.createElement(&#34;br&#34;));
        result.appendChild(button);
    }
    showQuestion(); 
&lt;/script&gt;


