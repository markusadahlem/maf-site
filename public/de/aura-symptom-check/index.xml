    }
&lt;/style&gt;

&lt;script&gt;
    const questions = [
        {
            text: &#34;Hat sich wenigstens ein Aurasymptom allm√§hlich √ºber ‚â•5 Minuten hinweg entwickelt?&#34;,
            explanation:
                &#34;Beispiel: Ein flackernder Fleck im Sichtfeld, der sich langsam ausdehnt.&#34;,
        },
        {
            text: &#34;Sind zwei oder mehr Aurasymptome nacheinander aufgetreten?&#34;,
            explanation: &#34;Beispiel: Eine visuelle Aura gefolgt von Kribbeln.&#34;,
        },
        {
            text: &#34;Hat jedes einzelne Aurasymptom zwischen 5‚Äì60 Minuten gedauert?&#34;,
            explanation: &#34;K√ºrzere oder l√§ngere Dauer ist weniger typisch.&#34;,
        },
        {
            text: &#34;War mindestens ein Auraph√§nomen einseitig (nur auf einer K√∂rper- oder Gesichtsh√§lfte)?&#34;,
            explanation:
                &#34;Beispiel: Sehst√∂rung nur auf einer Seite des Gesichtsfeldes oder Kribbeln nur auf einer K√∂rperseite.&#34;,
        },
        {
            text: &#34;War mindestens ein Auraph√§nomen positiv (z.‚ÄØB. Lichtblitze oder Kribbeln)?&#34;,
            explanation:
                &#34;Positiv bedeutet, dass etwas hinzugef√ºgt wird (nicht ein Funktionsverlust, z.B. blinddr Fleck oder Taubheit).&#34;,
        },
        {
            text: &#34;Trat die Aura zusammen mit oder innerhalb von 60 Minuten nach dem Kopfschmerz auf?&#34;,
            explanation:
                &#34;Das Timing ist wichtig ‚Äì der Kopfschmerz sollte innerhalb einer Stunde nach der Aura einsetzen.&#34;,
        },
    ];

    let current = 0;
    let answers = [];

    const container = document.getElementById(&#34;quizContainer&#34;);
    const result = document.getElementById(&#34;resultC&#34;);

    function showQuestion() {
        result.textContent = &#34;&#34;; 

        if (current === questions.length) {
            let summaryHTML = &#34;&lt;ul&gt;&#34;;
            questions.forEach((q, index) =&gt; {
                const response = answers[index] === true ? &#34;‚úÖ Ja&#34; : &#34;‚ùå Nein&#34;;
                summaryHTML += `&lt;li&gt;${q.text} &lt;strong&gt;${response}&lt;/strong&gt;&lt;/li&gt;`;
            });
            summaryHTML += &#34;&lt;/ul&gt;&#34;;

            container.innerHTML = `
              &lt;p&gt;&lt;strong&gt;Du hast den Abschnitt zu den Auracharakteristika abgeschlossen.&lt;/strong&gt;&lt;/p&gt;
              &lt;p&gt;Hier ist eine Zusammenfassung deiner Antworten:&lt;/p&gt;
              ${summaryHTML}
              &lt;p&gt;Klicke unten, um zu sehen, ob deine Angaben das klinische Kriterium erf√ºllen.&lt;/p&gt;
              &lt;button class=&#34;btn&#34; onclick=&#34;showResult()&#34;&gt;‚úÖ Ja, zeige mein Ergebnis&lt;/button&gt;
              &lt;button class=&#34;btn btn-secondary&#34; onclick=&#34;goBack()&#34;&gt;‚Üê Zur√ºck&lt;/button&gt;
            `;
            return;
        }

        const q = questions[current];
        container.innerHTML = `
    &lt;p&gt;&lt;strong&gt;Frage ${current + 1} von ${questions.length}&lt;/strong&gt;&lt;/p&gt;
    &lt;p&gt;${q.text}
      &lt;button onclick=&#34;showExplanation()&#34; title=&#34;Mehr Info&#34; class=&#34;info-icon&#34;&gt;‚ìò&lt;/button&gt;
    &lt;/p&gt;
    &lt;button class=&#34;btn&#34; onclick=&#34;answer(true)&#34;&gt;Ja&lt;/button&gt;
    &lt;button class=&#34;btn btn-outline&#34; onclick=&#34;answer(false)&#34;&gt;Nein&lt;/button&gt;
    ${current &gt; 0 ? `&lt;br&gt;&lt;br&gt;&lt;button class=&#34;btn btn-secondary&#34; onclick=&#34;goBack()&#34;&gt;‚Üê Zur√ºck&lt;/button&gt;` : &#34;&#34;}
    &lt;div id=&#34;explanation&#34; style=&#34;display:none; margin-top: 0.5rem; font-style: italic;&#34;&gt;&lt;/div&gt;
  `;
    }

    function answer(choice) {
        answers[current] = choice;
        current++;
        showQuestion();
    }

    function goBack() {
        if (current &gt; 0) current--;
        showQuestion();
    }

    function showExplanation() {
        const explanation = questions[current].explanation;
        const explEl = document.getElementById(&#34;explanation&#34;);
        explEl.textContent = explanation;
        explEl.style.display = &#34;block&#34;;
    }

    function showResult() {
        const score = answers.filter((a) =&gt; a === true).length;
        const passed = score &gt;= 3;

        
        window.location.href = passed
            ? &#34;/de/aura-symptom-check/criterionCmeet/&#34;
            : &#34;/de/aura-symptom-check/criterionCnotMeet/&#34;;
    }

    showQuestion(); 
&lt;/script&gt;


